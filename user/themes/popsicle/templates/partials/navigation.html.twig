<secton id="navigation">

    <nav class="main-nav">
        {% for page in pages.children.visible %}
            {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
            <a class="{{ current_page }}" href="{{ page.url }}">
                {% if page.home %}<span class="arrow">‚Üê</span> {% endif %}
                {% if page.header.icon %}<i class="fa fa-{{ page.header.icon }}"></i>{% endif %}
                {{ page.menu }}
            </a>
        {% endfor %}
        <a href="http://soundcloud.com/gravityfreesummer">soundcloud</a>
        <a href="http://gravityfreesummer.bandcamp.com">bandcamp</a>
        <a href="https://twitter.com/infinitybeach">twitter</a>
        <a href="https://www.facebook.com/gravityfreesummer">facebook</a>
        <a href="https://www.youtube.com/user/Gravitysummer">youtube</a>
        {% if config.plugins.feed.enabled %}
            <a class="cta" href="{{ base_url }}{{ pages.find('/blog').rawRoute }}.rss">{{ 'SUBSCRIBE'|t }}</a>
        {% endif %}
    </nav>
    {% if config.plugins.langswitcher.enabled %}
        {% include 'partials/langswitcher.html.twig' %}
    {% endif %}
</secton>
